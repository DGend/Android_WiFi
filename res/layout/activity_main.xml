<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/textMac"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/MAC"
        android:layout_margin="7dp"
        android:text="MAC 주소" />

    <TextView
        android:id="@+id/textNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Mactxt"
        android:layout_below="@+id/textMac"
        android:layout_margin="7dp"
        android:layout_marginTop="86dp"
        android:text="NULL" />

    <TextView
        android:id="@+id/textIP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/IP"
        android:layout_below="@+id/textNum"
        android:layout_margin="7dp"
        android:layout_marginTop="20dp"
        android:text="IP 주소" />
    
	<TextView
        android:id="@+id/textNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/IPtxt"
        android:layout_below="@+id/textMac"
        android:layout_margin="7dp"
        android:layout_marginTop="86dp"
        android:text="NULL" />
	
</RelativeLayout>
